<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:system="clr-namespace:System;assembly=mscorlib"
               xmlns:details="clr-namespace:application.DAL.RAW.Entities;assembly=application.DAL.RAW"
               x:TypeArguments="system:Int32" 
               x:Class="Application.App.Pages.View.Popups.VehicleEditPopup"
               Padding="-10"
               BackgroundColor="{StaticResource Gray900}"
>

    <toolkit:Popup.Content>
        <Grid RowDefinitions="Auto, *, Auto"
              BackgroundColor="{StaticResource Gray900}"
              WidthRequest="300"
              HeightRequest="300">

            <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="0,0,0,10">
                <Image Grid.Column="0"
                       Source="vehicle_ilustration.png"
                       Aspect="AspectFit"
                       Margin="0, -20, 0, -20"
                       WidthRequest="100"
                       HeightRequest="100"
                       VerticalOptions="Center"
                       HorizontalOptions="Start" />

                <Button Grid.Column="2" Text="✕" FontSize="Large" TextColor="Gray"
                        BackgroundColor="Transparent" BorderWidth="0"
                        HorizontalOptions="End" VerticalOptions="Start" Clicked="OnCloseTapped"/>
            </Grid>

            <VerticalStackLayout Grid.Row="1" Spacing="10">
                <Label Text="ID: " FontAttributes="Bold" />
                <Entry IsEnabled="{Binding IdIsUsed}" Placeholder="Zadajte ID" x:DataType="details:Vehicle" Text="{Binding Id, Mode=TwoWay}"/>

                <Label Text="Meno:" FontAttributes="Bold" />
                <Entry Placeholder="Zadajte meno"  x:DataType="details:Vehicle" Text="{Binding VehicleName, Mode=TwoWay}"/>
            </VerticalStackLayout>

            <Grid Grid.Row="2" ColumnDefinitions="*, auto, Auto" Margin="0,10,0,0" ColumnSpacing="20">
                <Button Grid.Column="1"
                        Text="Odstranit"
                        HorizontalOptions="Center"
                        IsEnabled="{Binding IdIsUsedInverseValue}" 
                        x:DataType="details:Employee" 
                        Clicked="OnDeleteTapped"/>

                <Button Grid.Column="2"
                        Text="Uložiť"
                        HorizontalOptions="End"
                        Clicked="OnSaveClicked"
                />
            </Grid>
        </Grid>
    </toolkit:Popup.Content>
</toolkit:Popup>