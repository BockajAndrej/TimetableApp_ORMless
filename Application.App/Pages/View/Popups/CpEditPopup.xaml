<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup x:TypeArguments="system:Int32" 
               xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:system="clr-namespace:System;assembly=System.Runtime"
               xmlns:details="clr-namespace:application.DAL.RAW.Entities;assembly=application.DAL.RAW"
               x:Class="application.App.Pages.View.Popups.CpEditPopup"
               CanBeDismissedByTappingOutsideOfPopup="False"
>

    <toolkit:Popup.Content>
        <Grid RowDefinitions="Auto, *, Auto"
              Padding="0"
              BackgroundColor="{StaticResource Gray900}"
              WidthRequest="500"
              HeightRequest="300">

            <Grid ColumnDefinitions="auto, *" RowDefinitions="auto, *" ColumnSpacing="20">
                <Button Grid.Column="1" Text="✕" FontSize="Large" TextColor="Gray"
                        BackgroundColor="Transparent" BorderWidth="0"
                        HorizontalOptions="End" VerticalOptions="Start" Margin="0, -15, -5, 0"/>
                <Image Source="city_ilustration.jpg"
                       Aspect="AspectFit"
                       WidthRequest="100"
                       HeightRequest="100"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"/>

                <StackLayout Grid.Column="1" Orientation="Vertical">
                    <StackLayout Orientation="Horizontal" Spacing="20">
                        <Label Text="Start" VerticalOptions="Center"></Label>
                        <StackLayout Orientation="Vertical">
                            <DatePicker ></DatePicker>
                            <TimePicker VerticalOptions="Center"></TimePicker>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </Grid>


            <Grid Grid.Row="2" ColumnDefinitions="*, auto, Auto" Margin="0,10,0,0" ColumnSpacing="20">
                <Button Grid.Column="1"
                        Text="Odstranit"
                        HorizontalOptions="Center"
                        IsEnabled="{Binding IdIsUsedInverseValue}" 
                        x:DataType="details:Cp" 
                        Clicked="OnDeleteTapped"/>

                <Button Grid.Column="2"
                        Text="Uložiť"
                        HorizontalOptions="End"
                        Clicked="OnSaveClicked"
                />
            </Grid>
        </Grid>
    </toolkit:Popup.Content>
</toolkit:Popup>